<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_maps"
    tools:context="com.example.inzod.ojometropolitano.MapsActivity">

    <fragment
        tools:context="com.example.inzod.ojometropolitano.MapsActivity"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="1000dp"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toLeftOf="parent"
            map:layout_constraintRight_toRightOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0"
            map:layout_constraintHorizontal_bias="0.485" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button4"
            android:background="@drawable/ic_security_white_18dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintRight_toRightOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="-10dp"
            map:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="8dp"
            map:layout_constraintLeft_toLeftOf="@+id/button6"
            map:layout_constraintHorizontal_bias="1.0" />

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_home_white_18dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintLeft_toRightOf="@+id/button8"
            map:layout_constraintRight_toLeftOf="@+id/button7"
            android:layout_marginBottom="0dp"
            map:layout_constraintHorizontal_bias="0.569" />

        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button4"
            android:background="@drawable/ic_person"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="-8dp"
            map:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            map:layout_constraintRight_toRightOf="parent"
            map:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@+id/button4"
            android:background="@drawable/ic_group_white_18dp"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            map:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            map:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="70dp"
            map:layout_constraintLeft_toLeftOf="@+id/button6"
            android:layout_marginRight="8dp"
            map:layout_constraintRight_toRightOf="@+id/button5"
            map:layout_constraintHorizontal_bias="0.164" />

        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/button4"
            android:background="@drawable/ic_location_on_white_18dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            map:layout_constraintVertical_bias="1.0"
            android:layout_marginRight="68dp"
            map:layout_constraintRight_toRightOf="@+id/button5"
            android:layout_marginLeft="8dp"
            map:layout_constraintLeft_toLeftOf="parent"
            map:layout_constraintHorizontal_bias="0.806" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/toolbar2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="99dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="27dp"
            android:text="Reportar"
            android:visibility="invisible"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
